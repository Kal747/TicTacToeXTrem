            android:id="@+id/square_0_2"
            android:text="" 
             android:textSize="70sp"
            android:tag="02"
            android:onClick="onClickButtonSquare">
        </Button>
    </TableRow>

    <TableRow>

        <Button
            android:id="@+id/square_1_0"
            android:text="" 
             android:textSize="70sp"
            android:tag="10"
            android:onClick="onClickButtonSquare">
        </Button>

