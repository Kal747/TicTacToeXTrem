            android:id="@+id/square_1_2"
            android:text="" 
             android:textSize="70sp"
            android:tag="12"
            android:onClick="onClickButtonSquare">
        </Button>
    </TableRow>

    <TableRow>

        <Button
            android:id="@+id/square_2_0"
            android:text="" 
             android:textSize="70sp"
            android:tag="20"
            android:onClick="onClickButtonSquare">
        </Button>

        <Button
            android:id="@+id/square_2_1"
            android:text="" 
             android:textSize="70sp"
            android:tag="21"
            android:onClick="onClickButtonSquare">
        </Button>

        <Button
            android:id="@+id/square_2_2"
            android:text="" 
             android:textSize="70sp"
            android:tag="22"
             android:onClick="onClickButtonSquare">
        </Button>
    </TableRow>

</TableLayout>

